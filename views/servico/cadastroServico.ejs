<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar Solicitação de Serviço</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/forms.css">
</head>
<body>
    
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 form-container">
                <h1 class="text-center">Criar Solicitação de Serviço</h1>
                <form action="/mecanico/servico" method="POST">
                    <!-- Seleção do catálogo -->
                    <div class="form-group">
                        <label for="id_catalogo">Catálogo de Serviços:</label>
                        <select name="id_catalogo" id="id_catalogo" class="form-control" required>
                            <% catalogos.forEach(catalogo => { %>
                                <option value="<%= catalogo.id %>"><%= catalogo.nome %></option>
                            <% }); %>
                        </select>
                    </div>

                    <!-- Seleção do Veículo -->
                    <div class="form-group">
                        <label for="id_veiculo">Veículos:</label>
                        <select name="id_veiculo" id="id_veiculo" class="form-control" required>
                            <% veiculos.forEach(veiculo => { %>
                                <option value="<%= veiculo.id %>"><%= veiculo.modelo %> - <%= veiculo.marca %></option>
                            <% }); %>
                        </select>
                    </div>

                    <!-- Seleção da Peça -->
                    <div class="form-group">
                        <label for="id_peca">Peças:</label>
                        <select name="id_peca" id="id_peca" class="form-control" required>
                            <% pecas.forEach(peca => { %>
                                <option value="<%= peca.id %>"><%= peca.nome %></option>
                            <% }); %>
                        </select>
                    </div>

                    <!-- Seleção de pagamento -->
                    <div class="form-group">
                        <label for="pagamento">Pagamento:</label>
                        <select name="pagamento" id="pagamento" class="form-control" required>
                            <option value="0">Crédito</option>
                            <option value="1">Débito</option>
                            <option value="2">Dinheiro/PIX</option>
                        </select>
                    </div>

                    <!-- Desconto -->
                    <div class="form-group">
                        <label for="desconto">Desconto (em porcentagem):</label>
                        <input type="number" name="desconto" id="desconto" class="form-control" min="0" max="100" required>
                    </div>

                    <!-- Descrição -->
                    <div class="form-group">
                        <label for="descricao">Descrição:</label>
                        <textarea name="descricao" id="descricao" class="form-control" rows="4" required></textarea>
                    </div>

                    <!-- Identificação do mecânico -->
                    <input type="hidden" name="id_mecanico" value="<%= mecanico.id %>">

                    <!-- Botão de envio -->
                    <div class="form-group text-center">
                        <button type="submit" class="botao btn-submit btn-block">Criar Solicitação</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Script do Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zyyH2fQw6O5f5hW81KHZ1PxI6W9G0P7PpUqF7/sJ" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0tX8a5r0C6QRSZhpAlQkHvc9JlX5yV9zGVXx3RfTlGVwD5Dk" crossorigin="anonymous"></script>
</body>
</html>
